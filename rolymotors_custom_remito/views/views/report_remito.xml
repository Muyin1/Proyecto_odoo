<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_remito_x_custom" model="ir.actions.report">
        <field name="name">Remito X (Personalizado)</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">rolymotors_custom_remito.report_remito_x_standalone</field>
        <field name="report_file">rolymotors_custom_remito.report_remito_x_standalone</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_remito_x_standalone">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="article">
                    <div class="header">
                        <div class="row">
                            <div class="col-6 mb4">
                                <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 45px;" alt="Logo"/>
                            </div>
                            <div class="col-6 text-end">
                                <strong t-field="o.company_id.name"/>
                                <address t-field="o.company_id.partner_id" t-options='{"widget": "contact", "fields": ["address", "phone", "email", "website"], "no_marker": True}'/>
                                <span t-if="o.company_id.vat">CUIT: <span t-field="o.company_id.vat"/></span>
                            </div>
                        </div>
                        <div class="row zero_min_height">
                            <div class="col-12">
                                <div style="border-bottom: 1px solid black;"/>
                            </div>
                        </div>
                    </div>
                    <div class="page" style="padding-top: 20px;">
                        <h2>REMITO X</h2>
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <div t-if="o.partner_id">
                                    <strong>Cliente:</strong><br/>
                                    <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["name", "address"], "no_marker": True}'/>
                                </div>
                            </div>
                            <div class="col-5 offset-1 text-right">
                                <p><strong>Nro de Remito:</strong> <span t-field="o.name"/></p>
                                <p><strong>Fecha:</strong> <span t-field="o.scheduled_date" t-options='{"widget": "date"}'/></p>
                                <p t-if="o.origin"><strong>Pedido de Origen:</strong> <span t-field="o.origin"/></p>
                            </div>
                        </div>
                        <table class="table table-sm mt-4">
                            <thead>
                                <tr>
                                    <th name="th_description">Producto</th>
                                    <th name="th_quantity" class="text-right">Cantidad Entregada</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.move_line_ids" t-as="line">
                                    <td>
                                        <span t-field="line.product_id.display_name"/>
                                        <p t-if="line.move_id.description_picking" class="text-muted"><small><t t-esc="line.move_id.description_picking"/></small></p>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.product_uom_id"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="footer" style="position: absolute; bottom: 50px; width: 95%;">
                        <div class="row">
                            <div class="col-6 text-center">
                                <hr style="border-top: 1px solid black;"/>
                                <strong>Firma de quien entrega</strong>
                            </div>
                             <div class="col-6 text-center">
                                <hr style="border-top: 1px solid black;"/>
                                <strong>Firma, aclaración y DNI de quien recibe</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <record id="action_report_custom_invoice" model="ir.actions.report">
        <field name="name">Factura Personalizada</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">rolymotors_custom_remito.report_invoice_template</field>
        <field name="report_file">rolymotors_custom_remito.report_invoice_template</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_invoice_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="article">
                    <div class="header">
                        <div class="row">
                            <div class="col-6 mb4">
                                <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 45px;" alt="Logo"/>
                            </div>
                            <div class="col-6 text-end">
                                <strong t-field="o.company_id.name"/>
                                <address t-field="o.company_id.partner_id" t-options='{"widget": "contact", "fields": ["address", "phone", "email", "website"], "no_marker": True}'/>
                                <span t-if="o.company_id.vat">CUIT: <span t-field="o.company_id.vat"/></span>
                            </div>
                        </div>
                        <div class="row zero_min_height">
                            <div class="col-12">
                                <div style="border-bottom: 1px solid black;"/>
                            </div>
                        </div>
                    </div>
                    <div class="page" style="padding-top: 20px;">
                        <h2><span t-field="o.move_type"/></h2>
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Cliente:</strong><br/>
                                <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["name", "address"], "no_marker": True}'/>
                            </div>
                            <div class="col-5 offset-1 text-right">
                                <p><strong><span t-field="o.move_type"/> Nro:</strong> <span t-field="o.name"/></p>
                                <p><strong>Fecha:</strong> <span t-field="o.invoice_date" t-options='{"widget": "date"}'/></p>
                                <p t-if="o.invoice_date_due"><strong>Vencimiento:</strong> <span t-field="o.invoice_date_due" t-options='{"widget": "date"}'/></p>
                                <p t-if="o.invoice_origin"><strong>Origen:</strong> <span t-field="o.invoice_origin"/></p>
                            </div>
                        </div>
                        <table class="table table-sm mt-4">
                            <thead>
                                <tr>
                                    <th name="th_description">Descripción</th>
                                    <th name="th_quantity" class="text-end">Cantidad</th>
                                    <th name="th_price_unit" class="text-end">Precio Unit.</th>
                                    <th name="th_amount" class="text-end">Importe</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.invoice_line_ids" t-as="line">
                                    <tr t-if="line.display_type == 'product'">
                                        <td><span t-field="line.name"/></td>
                                        <td class="text-end"><span t-field="line.quantity"/> <span t-field="line.product_uom_id"/></td>
                                        <td class="text-end"><span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                        <td class="text-end"><span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <div class="row justify-content-end">
                            <div class="col-4">
                                <table class="table table-sm">
                                    <tbody>
                                        <tr>
                                            <td><strong>Subtotal</strong></td>
                                            <td class="text-end"><span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                        </tr>
                                        <t t-foreach="o.tax_totals['groups_by_subtotal']" t-as="subtotal_group">
                                            <t t-foreach="o.tax_totals['groups_by_subtotal'][subtotal_group]" t-as="tax">
                                                <tr>
                                                    <td><span t-esc="tax['tax_group_name']"/></td>
                                                    <td class="text-end">
                                                        <span t-esc="tax['formatted_tax_group_amount']"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                        <tr class="border-black">
                                            <td><strong>Total</strong></td>
                                            <td class="text-end"><span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
    
</odoo>