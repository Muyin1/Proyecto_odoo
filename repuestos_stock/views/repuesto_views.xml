<odoo>
  <template id="assets_backend" inherit_id="web.assets_backend" name="Assets Repuestos">
    <xpath expr="." position="inside">
      <script type="text/javascript" src="/repuestos_stock/static/src/js/repuesto_form.js"/>
    </xpath>
  </template>

  <record id="view_form_repuesto" model="ir.ui.view">
    <field name="name">product.template.form.repuesto</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
      <form js_class="repuesto_form_js">
        <sheet>
          <group string="Ficha TÃ©cnica del Repuesto">
            <field name="tipo_repuesto"/>
            <field name="codigo_repuesto"/>
            <field name="codigo_oem"/>
            <field name="marca"/>
            <field name="vehiculo_ids" widget="many2many_tags"/>
          </group>

          <group string="Solo Inyectores" class="inyector-section o_hidden">
            <field name="insulating_color"/>
            <field name="injection_type"/>
            <field name="number_pines"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
