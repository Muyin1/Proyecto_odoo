<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_form_repuesto" model="ir.ui.view">
        <field name="name">repuestos_stock.repuesto.form</field>
        <field name="model">repuestos_stock.repuesto</field>
        <field name="arch" type="xml">
            <form string="Repuesto">
                <sheet>
                    <group>
                        <field name="codigo"/>
                        <field name="codigo_oem"/>
                        <field name="descripcion"/>
                        <field name="marca_id"/>
                        <field name="vehiculo_ids"/>
                        <field name="cantidad"/>
                        <field name="precio_venta"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_repuesto" model="ir.ui.view">
        <field name="name">repuestos_stock.repuesto.tree</field>
        <field name="model">repuestos_stock.repuesto</field>
        <field name="arch" type="xml">
            <tree string="Repuestos">
                <field name="codigo"/>
                <field name="marca_id"/>
                <field name="descripcion"/>
                <field name="cantidad"/>
                <field name="precio_venta"/>
            </tree>
        </field>
    </record>

    <record id="view_search_repuesto" model="ir.ui.view">
        <field name="name">repuestos_stock.repuesto.search</field>
        <field name="model">repuestos_stock.repuesto</field>
        <field name="arch" type="xml">
            <search>
                <field name="codigo"/>
                <field name="codigo_oem"/>
                <field name="descripcion"/>
                <field name="marca_id"/>
                <field name="vehiculo_ids"/>
            </search>
        </field>
    </record>

    <record id="action_repuestos" model="ir.actions.act_window">
        <field name="name">Repuestos</field>
        <field name="res_model">repuestos_stock.repuesto</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_search_repuesto"/>
    </record>

    <menuitem id="menu_repuestos_stock"
              name="Repuestos"
              parent="menu_repuesto_root"
              action="action_repuestos"
              sequence="20"/>
</odoo>
