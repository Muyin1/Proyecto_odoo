<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Heredamos la vista de formulario de productos para agregar la información de autopartes -->
  <record id="view_product_template_form_autoparte" model="ir.ui.view">
    <field name="name">product.template.form.autoparte</field>
    <field name="model">product.template</field>
    <!-- Se hereda la vista de formulario base -->
    <field name="inherit_id" ref="product.product_template_form_view"/>
    <field name="arch" type="xml">
        <!-- Insertamos un nuevo grupo dentro de la pestaña 'General Information' -->
        <xpath expr="//sheet/notebook/page[@string='General Information']" position="inside">
        <group>
            <field name="codigo_repuesto"/>
            <field name="codigo_oem"/>
            <field name="marca_id"/>
            <field name="vehiculo_ids" widget="many2many_tags"/>
            <field name="tipo_id"/>
            <field name="barcode"/>
        </group>
        </xpath>
    </field>
  </record>
  
  <!-- Heredamos la vista de búsqueda para agregar un filtro de autopartes -->
  <record id="view_product_template_search_autoparte" model="ir.ui.view">
    <field name="name">product.template.search.autoparte</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_search_view"/>
    <field name="arch" type="xml">
      <!-- Filtro para mostrar solo autopartes -->
      <xpath expr="//filter[@name='product_type']" position="after">
         <filter name="autopartes" string="Autopartes" domain="[('codigo_repuesto','!=',False)]"/>
      </xpath>
      <!-- Agregar el campo Many2many para Vehículos -->
      <xpath expr="//field[@name='name']" position="after">
         <field name="vehiculo_ids" string="Vehículos" widget="many2many_tags"/>
      </xpath>
    </field>
  </record>

  
  <!-- Acción para mostrar los productos que son autopartes -->
  <record id="action_autopartes" model="ir.actions.act_window">
      <field name="name">Autopartes</field>
      <field name="res_model">product.template</field>
      <field name="view_mode">tree,form</field>
      <!-- El dominio filtra aquellos productos que tengan un código de repuesto -->
      <field name="domain">[('codigo_repuesto','!=',False)]</field>
  </record>
  
  <!-- Menú para acceder a la lista de autopartes -->
  <menuitem id="menu_autopartes"
            name="Autopartes"
            parent="menu_repuesto_root"
            action="action_autopartes"
            sequence="20"/>
</odoo>
