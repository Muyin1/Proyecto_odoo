<odoo>

  <!-- Vista de carga personalizada de repuestos -->
  <record id="view_form_repuesto_carga" model="ir.ui.view">
    <field name="name">Carga Repuestos Personalizada</field>
    <field name="model">product.template</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group string="Datos Generales">
            <field name="name" string="Nombre del Repuesto"/>
            <field name="tipo_repuesto"/>
            <field name="codigo_repuesto"/>
            <field name="codigo_oem"/>
            <field name="marca"/>
            <field name="vehiculo_ids" widget="many2many_tags"/>
          </group>

          <group string="Solo Inyectores" class="inyector-section o_hidden">
            <field name="insulating_color"/>
            <field name="injection_type"/>
            <field name="number_pines"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- üìã Vista de lista compacta para navegaci√≥n -->
  <record id="view_tree_repuestos_personalizada" model="ir.ui.view">
    <field name="name">Lista Repuestos</field>
    <field name="model">product.template</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="codigo_repuesto"/>
        <field name="tipo_repuesto"/>
        <field name="marca"/>
      </tree>
    </field>
  </record>

  <!-- üß≠ Acci√≥n que une ambas vistas bajo el men√∫ "Productos" -->
  <record id="action_product_template_repuestos" model="ir.actions.act_window">
    <field name="name">Cat√°logo de Repuestos</field>
    <field name="res_model">product.template</field>
    <field name="view_mode">tree,form</field>
    <field name="view_ids" eval="[(5, 0, 0),
      (0, 0, {'view_mode': 'tree', 'view_id': ref('view_tree_repuestos_personalizada')}),
      (0, 0, {'view_mode': 'form', 'view_id': ref('view_form_repuesto_carga')})
    ]"/>
    <field name="domain">[('tipo_repuesto', '!=', False)]</field>
    <field name="context">{'default_detailed_type': 'product'}</field>
  </record>

</odoo>
