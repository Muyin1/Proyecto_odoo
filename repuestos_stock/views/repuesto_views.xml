<odoo>
  <!-- Vista Formulario Exclusiva -->
  <record id="view_form_repuesto_custom" model="ir.ui.view">
    <field name="name">Repuesto Personalizado</field>
    <field name="model">product.template</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group string="Ficha Técnica del Repuesto">
            <field name="tipo_repuesto"/>
            <field name="codigo_repuesto"/>
            <field name="codigo_oem"/>
            <field name="marca"/>
            <field name="vehiculo_ids" widget="many2many_tags"/>
          </group>

          <group string="Solo Inyectores" class="inyector-section o_hidden">
            <field name="insulating_color"/>
            <field name="injection_type"/>
            <field name="number_pines"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Acción que usa esta vista -->
  <record id="action_product_template_repuestos" model="ir.actions.act_window">
    <field name="name">Catálogo de Repuestos</field>
    <field name="res_model">product.template</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[('tipo_repuesto','!=',False)]</field>
    <field name="view_id" ref="view_form_repuesto_custom"/>
    <field name="context">{'default_detailed_type': 'product'}</field>
  </record>
</odoo>


