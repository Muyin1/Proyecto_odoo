<odoo>

   <!-- Vista de Carga -->
  <record id="view_form_repuesto_carga" model="ir.ui.view">
    <field name="name">Repuestos - Alta</field>
    <field name="js_class">repuesto_form_js</field>
    <field name="model">product.template</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" string="Nombre del Repuesto" required="1"/>
            <field name="tipo_repuesto"/>
            <field name="codigo_repuesto"/>
            <field name="codigo_oem"/>
            <field name="marca"/>
            <field name="list_price" string="Precio de Venta"/>
            <field name="vehiculo_ids" widget="many2many_tags"/>
          </group>

          <group string="Solo Inyectores" class="grupo-inyector o_hidden">
            <field name="insulating_color"/>
            <field name="injection_type"/>
            <field name="number_pines"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Vista de Catálogo -->
  <record id="view_form_repuesto_catalogo" model="ir.ui.view">
    <field name="name">Repuestos - Catálogo</field>
    <field name="model">product.template</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="codigo_repuesto"/>
            <field name="tipo_repuesto"/>
            <field name="marca"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Vista tipo lista -->
  <record id="view_tree_repuestos_personalizada" model="ir.ui.view">
    <field name="name">Repuestos - Lista</field>
    <field name="model">product.template</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="codigo_repuesto"/>
        <field name="tipo_repuesto"/>
      </tree>
    </field>
  </record>

  <!--Vista Para la Alta de Productos-->

  <record id="action_product_template_repuestos_alta" model="ir.actions.act_window">
    <field name="name">Alta de Repuestos</field>
    <field name="res_model">product.template</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_form_repuesto_carga"/>
    <field name="context">{'default_detailed_type': 'product'}</field>
  </record>

 <!--Vista para el catalogo en general-->
  <record id="action_product_template_repuestos_catalogo" model="ir.actions.act_window">
    <field name="name">Catálogo de Repuestos</field>
    <field name="res_model">product.template</field>
    <field name="view_mode">tree,form</field>
    <field name="view_ids" eval="[(5, 0, 0),
      (0, 0, {'view_mode': 'tree', 'view_id': ref('view_tree_repuestos_personalizada')}),
      (0, 0, {'view_mode': 'form', 'view_id': ref('view_form_repuesto_catalogo')})
    ]"/>
    <field name="domain">[('tipo_repuesto', '!=', False)]</field>
    <field name="context">{'default_detailed_type': 'product'}</field>
  </record>



</odoo>
