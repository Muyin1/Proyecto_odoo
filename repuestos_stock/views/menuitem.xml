
<odoo>
 <!-- Menú raíz principal que agrupa toda la sección de repuestos -->
  <menuitem id="menu_repuestos_root" name="Repuestos" sequence="10"/>

  <!-- Submenú interno: puede servir para agrupar cosas como catálogo, configuración, etc. -->
  <menuitem id="menu_repuestos_catalogo"
            name="Catálogo"
            parent="menu_repuestos_root"
            sequence="10"/>

  <!-- Entrada al listado de productos tipo repuesto
       Usa la acción definida en `action_product_template_repuestos`
       que muestra solo productos con `tipo_repuesto` definido -->
  <menuitem id="menu_repuestos_productos"
            name="Productos"
            parent="menu_repuestos_catalogo"
            action="repuestos_stock.action_product_template_repuestos"
            sequence="10"/>

  <!-- Acción/Vista: Vehículos -->
  <record id="action_vehiculo" model="ir.actions.act_window">
    <field name="name">Vehículos</field>
    <field name="res_model">repuestos_stock.vehiculo</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_repuestos_vehiculos"
            name="Vehículos Compatibles"
            parent="menu_repuestos_catalogo"
            action="action_vehiculo"
            sequence="20"/>
</odoo>
