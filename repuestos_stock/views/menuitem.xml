<odoo>

  <!-- Menú raíz para todo lo relacionado con repuestos -->
  <menuitem id="menu_repuestos_root"
            name="Repuestos"
            sequence="10"/>

  <!-- Submenú "Catálogo" agrupador visual -->
  <menuitem id="menu_repuestos_catalogo"
            name="Catálogo"
            parent="menu_repuestos_root"
            sequence="10"/>

  <!-- Acción para ver solo productos con tipo_repuesto definido
       Muestra tu formulario personalizado -->
  <menuitem id="menu_repuestos_productos"
            name="Productos"
            parent="menu_repuestos_catalogo"
            action="repuestos_stock.action_product_template_repuestos"
            sequence="10"/>

  <!-- Acción para ver vehículos compatibles (si tenés el modelo repuestos_stock.vehiculo) -->
  <menuitem id="menu_repuestos_vehiculos"
            name="Vehículos"
            parent="menu_repuestos_catalogo"
            action="repuestos_stock.action_vehiculo"
            sequence="20"/>

</odoo>
